
<div class="row">

  	<div class="col-xs-12 col-sm-4">
    	<div class="panel panel-default">
      	<div class="panel-heading">Character Info</div>
      	<div class="panel-body">

        	<div>
          	<h3>{{ input value=character.name class="form-control" }}

					{{#each errors.character.name as |err|}}
						<span class="label label-danger"> {{err}} </span>
					{{/each}}

					| Level
            	<button {{action 'levelUp' }}
              		class="btn btn-sm">{{ character.level }}
              			<span class="glyphicon glyphicon-upload"></span>
            	</button>
					{{ character.class }}
          	</h3>
				<div>
				<button type="btn btn-default" {{action 'randomizeCharacter'}}>Random </button>
				</div>
        	</div>

        	<span class="btn btn-success" {{ action 'saveCharacter' }}>Save</span>
        	<span class="btn btn-danger" {{ action 'removeCharacter'}}>Drop</span>

        	<div>Health</div>
        	<div class="progress">
          <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
            <span>HP: {{ character.maxHealth}} / {{ character.maxHealth}}</span>
          </div>
        </div>

        <div>Mana</div>
        <div class="progress">
          <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
            <span>MP: {{ character.maxMana}} / {{ character.maxMana}}</span>
          </div>
        </div>

        <div>Burden</div>
        <div class="progress">
          <div class="progress-bar progress-bar-{{if character.hampered 'warning' }}" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: {{ burdenPercent }}%;">
            <span>{{ character.itemWeight}} / {{ character.maxWeight}}</span>
          </div>
        </div>

        {{#if hampered}}

        <div class="">
          <h3>You are carrying too much stuff!!!</h3>
        </div>
        {{else}}
        {{/if}}
      </div>

    </div>
  </div>


  <div class="col-xs-12 col-sm-4">
	 <div class="panel panel-default">
      <div class="panel-heading">Stats</div>
      <div class="panel-body">
        <table class="table table-hover">
          <thead>
              <th>stat</th>
              <th>&nbsp;</th>
              <th>value</th>
              <th>&nbsp;</th>
              <th>bonus</th>
          </thead>

          <tbody>
          	{{ modify-character-stat label='strength' stat=character.strength bonus=character.strengthBonus pointsLeft=character.statPointsToSpend}}
            {{ modify-character-stat label='intelligence' stat=character.intelligence bonus=character.intelligenceBonus pointsLeft=character.statPointsToSpend}}
            {{ modify-character-stat label='wisdom' stat=character.wisdom bonus=character.wisdomBonus pointsLeft=character.statPointsToSpend}}
            {{ modify-character-stat label='dexterity' stat=character.dexterity bonus=character.dexterityBonus pointsLeft=character.statPointsToSpend}}
            {{ modify-character-stat label='constitution' stat=character.constitution bonus=character.constitutionBonus pointsLeft=character.statPointsToSpend}}
            {{ modify-character-stat label='charisma' stat=character.charisma bonus=character.charismaBonus pointsLeft=character.statPointsToSpend}}
          </tbody>

        </table>

      </div>
    </div>

{{yield}}

  </div>


  <div class="col-xs-12 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">Inventory
        <div class='btn btn-primary btn-sm pull-right' {{ action 'addItem' }}>pickup</div>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
          <thead>
            <th>name</th>
            <th>weight</th>
            <th>bonuses</th>
            <th>&nbsp;</th>
          </thead>

          <tbody>

            {{#each character.items as |item|}}
              <tr>
                <td><strong>{{ item.name }}</strong></td>
                <td>{{ item.weight }}</td>
                <td>
                  {{#each item.bonusStrings as |b|}}
                    <span class="label label-success">{{b}}</span>
                  {{/each}}
                </td>
                <td><span class="btn btn-xs" {{ action 'removeItem' item }}>
                  <span class="glyphicon glyphicon-remove"></span>
                </span></td>
              </tr>
            {{/each}}

          </tbody>
        </table>


      </div>
    </div>
  </div>

</div>